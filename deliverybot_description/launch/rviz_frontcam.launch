<launch>
    <arg name="rviz" default="true" />
    <arg name="rtabmapviz" default="false" />

    <!--Launching the robot description node-->

    <include file="$(find deliverybot_description)/launch/deliverybot_description.launch"/>

    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="--delete_db_on_start">

        <remap from="rgb/image" to="cam_front/color/image_raw" />
        <remap from="depth/image" to="cam_front/aligned_depth_to_color/image_raw" />
        <remap from="rgb/camera_info" to="cam_front/color/camera_info" />

        <!--
        <param name="depth_topic" value="cam_front/aligned_depth_to_color/image_raw" />
        <param name="rgb_topic" value="cam_front/color/image_raw" />
        <param name="camera_info_topic" value="cam_front/color/camera_info" />
        -->
        <param name="approx_sync" value="false" />
        <param name="frame_id" value="base_link" />
    </node>
</launch>